#include "algorithms.h"

int main () {

	vector < pair<double,int> > sinkBuffer;

	pair<double,int> sample(29.5,1);
	pair<double,int> sample2(21.2,2);
	pair<double,int> sample3(27.8,3);
	pair<double,int> sample4(20.1,4);
	pair<double,int> sample5(18.0,5);
	pair<double,int> sample6(30.7,6);

	sinkBuffer.push_back(sample);
	sinkBuffer.push_back(sample2);
	sinkBuffer.push_back(sample3);
	sinkBuffer.push_back(sample4);
	sinkBuffer.push_back(sample5);
	sinkBuffer.push_back(sample6);

	for(int i=0; i<sinkBuffer.size(); i++)
		cout << get<0>(sinkBuffer[i]) << " ";

	cout << endl;

	sort(sinkBuffer.begin(), sinkBuffer.end(), comparePair);

	for(int i=0; i<sinkBuffer.size(); i++)
		cout << get<0>(sinkBuffer[i]) << " ";



	return 0;
}


